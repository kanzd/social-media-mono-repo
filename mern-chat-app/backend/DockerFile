# Use Node image
FROM node:20

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY ./package.json ./
RUN npm install

# Copy source code
COPY . .
RUN apt install certbot
RUN certbot certonly --standalone -d hik8.com --non-interactive --agree-tos -m companyhik8@gmail.com
# Expose port
EXPOSE 80

# Start server
CMD ["npx", "nodemon"]